<Window x:Class="BookYourRoom.Forms.Customers.UpdateCustomer"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BookYourRoom.Forms.Customers"
        mc:Ignorable="d"
        Title="Update Customer" Height="340" Width="400">
    <Grid Margin="10">
        <TextBlock Text="Update Customer" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" Margin="0 0 0 20"/>

        <StackPanel>
            <Label Content="First Name" Margin="0 5"/>
            <TextBox Name="FirstNameTextBox" Width="Auto" Height="30" Margin="0 5"/>

            <Label Content="Last Name" Margin="0 5"/>
            <TextBox Name="LastNameTextBox" Width="Auto" Height="30" Margin="0 5"/>

            <Label Content="Email" Margin="0 5"/>
            <TextBox Name="EmailTextBox" Width="Auto" Height="30" Margin="0 5"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0 20 0 0">
                <Button Content="Cancel" Width="75" Margin="5" Click="CancelButton_Click"/>
                <Button Content="Update" Width="75" Margin="5" Click="UpdateButton_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
