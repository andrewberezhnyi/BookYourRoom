<Window x:Class="BookYourRoom.Forms.Rooms.UpdateRoom"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BookYourRoom.Forms.Rooms"
        mc:Ignorable="d"
        Title="Update Room" Height="280" Width="400">
    <Grid Margin="10">
        <TextBlock Text="Update Room" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" Margin="0 0 0 20"/>

        <StackPanel Margin="0 20 0 0">
            <Label Content="Room Number" Margin="0 5"/>
            <TextBox Name="RoomNumberTextBox" Width="Auto" Height="30" Margin="0 5"/>

            <Label Content="Hotel" Margin="0 5"/>
            <ComboBox Name="HotelComboBox" Width="Auto" Height="30" Margin="0,5" DisplayMemberPath="Name" SelectedValuePath="HotelId"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0 20 0 0">
                <Button Content="Cancel" Width="75" Margin="5" Click="CancelButton_Click"/>
                <Button Content="Update" Width="75" Margin="5" Click="UpdateButton_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
